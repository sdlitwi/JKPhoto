@{
    ViewBag.Title = ViewBag.Name + " | ";
}
<style>
    #galleria {
        width: auto;
        height: 500px;
        background: #000;
    }
</style>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.js"></script>
<script src="~/Scripts/galleria/galleria-1.3.1.min.js"></script>
<script>
    Galleria.loadTheme('/Scripts/galleria/themes/classic/galleria.classic.min.js');
    Galleria.run('#galleria');
</script>
<h2 style="text-align: center;">@ViewBag.Name &nbsp;</h2>
<div class="row">
    <div id="galleria">
            @foreach (JKPhoto.Models.Photo p in ViewData.Model)
            {
                <img src="~/Portfolio/@ViewBag.Name/@p.fileName" />
            }
    </div>
</div>


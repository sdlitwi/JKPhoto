@{
    ViewBag.Title = ViewBag.Name + " | ";
}
<script src="~/Scripts/galleria/galleria-1.3.5.min.js"></script>
<script>
    Galleria.loadTheme('/Scripts/galleria/themes/classic/galleria.classic.min.js');
    Galleria.configure({
        lightbox: true
    });
    Galleria.run('#galleria');
</script>
<h2 style="text-align: center;">@ViewBag.Name &nbsp;</h2>
<div class="row">
    <div id="galleria">
            @foreach (JKPhoto.Models.Photo p in ViewData.Model)
            {
                <img src="~/Content/Portfolio/@ViewBag.Name/@p.fileName" />
            }
    </div>
</div>

